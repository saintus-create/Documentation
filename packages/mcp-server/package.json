{
    "name": "@shadcn-svelte/mcp-server",
    "version": "0.1.0",
    "description": "Model Context Protocol server for shadcn-svelte component library",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "shadcn-svelte-mcp": "dist/index.js"
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsup src/index.ts --format esm --dts --clean",
        "start": "node dist/index.js",
        "check": "tsc --noEmit"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "shadcn",
        "svelte",
        "sveltekit",
        "ui-components"
    ],
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.4",
        "fuse.js": "^7.0.0",
        "zod": "^3.25.64"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "tsup": "^8.0.0",
        "tsx": "^4.20.0",
        "typescript": "catalog:"
    }
}